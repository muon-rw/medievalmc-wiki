---
import Layout from '../layouts/Layout.astro';
import {Image} from 'astro:assets';
import otherworldLogo from '../assets/otherworld_bg.webp';
import medievalLogo from '../assets/mmc4_bg.jpg';
import titleLogo from '../assets/medievalmc_text.webp';
---

<Layout title="Medieval MC & Otherworld">
    <main class="min-h-screen bg-gradient-to-b from-stone-900 via-stone-800 to-stone-900">

        <!-- Banner Section -->
        <div class="text-center mb-12">
            <div class="w-full max-w-[90vw] md:max-w-7xl mx-auto pt-2 group relative z-0">
                <div class="transform transition-all duration-300
                    group-hover:scale-[1.02] group-hover:drop-shadow-[0_10px_10px_rgba(0,0,0,0.3)]">
                    <Image
                            src={titleLogo}
                            alt="Medieval Minecraft"
                            class="w-full h-auto"
                    />
                    <div class="absolute bottom-0 left-0 right-0 text-center mb-2 md:mb-4">
                <span class="text-2xl md:text-3xl lg:text-4xl font-bold tracking-widest text-amber-400
                           drop-shadow-[0_2px_2px_rgba(0,0,0,0.8)]">
                    WIKI
                </span>
                    </div>
                </div>
            </div>
            <div class="container mx-auto px-4">
                <p class="text-xl text-stone-300 max-w-4xl mx-auto mt-6 font-medium
                  tracking-wide drop-shadow-lg hover:text-stone-200 transition-colors
                  border-t border-b border-stone-700/50 py-4">
                    Documentation for the Medieval MC modpacks by Luna Pixel Studios, and related projects
                </p>
            </div>
        </div>

        <!-- Content Section -->
        <div class="container mx-auto px-4">
            <!-- Modpacks Header -->
            <h2 class="text-3xl font-bold mb-8 text-amber-400 border-b border-amber-900/50 pb-4">Modpacks</h2>

            <!-- Modpacks Grid -->
            <div class="grid md:grid-cols-2 gap-8 mb-12">
                <!-- Otherworld Card -->
                <a href="/modpacks/otherworld"
                   class="group relative overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-0.5 bg-gradient-to-br from-purple-900/20 to-purple-900/10">
                    <div class="absolute inset-0 bg-gradient-to-t from-purple-900/90 to-transparent opacity-60 group-hover:opacity-75 transition-opacity duration-300 z-10"></div>
                    <Image src={otherworldLogo} alt="Otherworld Logo"
                           class="w-full h-full object-cover aspect-[16/9] transform group-hover:scale-105 transition-transform duration-300"/>
                    <div class="absolute bottom-0 left-0 right-0 z-20">
                        <div class="bg-purple-900/40 backdrop-blur-sm p-4 border-t border-purple-500/20">
                            <h3 class="text-2xl font-bold mb-2 text-purple-200 group-hover:text-purple-100 transition-colors drop-shadow-lg">
                                Otherworld</h3>
                            <p class="text-purple-100/90 group-hover:text-purple-100 transition-colors">An upcoming
                                DnD-themed fantasy modpack</p>
                        </div>
                    </div>
                </a>

                <!-- Medieval MC Card -->
                <a href="/modpacks/mmc4-forge"
                   class="group relative overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-0.5 bg-gradient-to-br from-amber-900/20 to-amber-900/10">
                    <div class="absolute inset-0 bg-gradient-to-t from-amber-900/90 to-transparent opacity-60 group-hover:opacity-75 transition-opacity duration-300 z-10"></div>
                    <Image src={medievalLogo} alt="Medieval MC Logo"
                           class="w-full h-full object-cover aspect-[16/9] transform group-hover:scale-105 transition-transform duration-300"/>
                    <div class="absolute bottom-0 left-0 right-0 z-20">
                        <div class="bg-amber-900/40 backdrop-blur-sm p-4 border-t border-amber-500/20">
                            <h3 class="text-2xl font-bold mb-2 text-amber-200 group-hover:text-amber-100 transition-colors drop-shadow-lg">
                                Medieval MC [FORGE] MMC4</h3>
                            <p class="text-amber-100/90 group-hover:text-amber-100 transition-colors">
                                Medieval Fantasy Adventure and Exploration for 1.20.1 Forge - Page under construction!
                            </p>
                        </div>
                    </div>
                </a>
            </div>

            <h2 class="text-3xl font-bold mb-8 text-amber-400 border-b border-amber-900/50 pb-4">
                Mods
            </h2>

            <div class="grid md:grid-cols-3 gap-6">
                <a href="/mods/otherworld-origins"
                   class="group relative overflow-hidden rounded-lg shadow-md hover:shadow-xl
              transition-all duration-300 hover:-translate-y-0.5
              bg-gradient-to-br from-blue-900/20 to-blue-900/10 border border-blue-500/10">
                    <div class="absolute inset-0 bg-gradient-to-br from-blue-900/0 to-blue-900/30
                    group-hover:from-blue-900/10 group-hover:to-blue-900/40
                    transition-all duration-300"></div>
                    <div class="relative p-6 z-10">
                        <h3 class="text-xl font-bold mb-2 text-blue-200 group-hover:text-blue-100
                       transition-colors drop-shadow-lg">
                            Otherworld Origins
                        </h3>
                        <p class="text-blue-100/80 group-hover:text-blue-100 transition-colors">
                            Origins mod for the Otherworld modpack
                        </p>
                    </div>
                </a>

                <a href="/mods/otherworld-apotheosis"
                   class="group relative overflow-hidden rounded-lg shadow-md hover:shadow-xl
              transition-all duration-300 hover:-translate-y-0.5
              bg-gradient-to-br from-emerald-900/20 to-emerald-900/10 border border-emerald-500/10">
                    <div class="absolute inset-0 bg-gradient-to-br from-emerald-900/0 to-emerald-900/30
                    group-hover:from-emerald-900/10 group-hover:to-emerald-900/40
                    transition-all duration-300"></div>
                    <div class="relative p-6 z-10">
                        <h3 class="text-xl font-bold mb-2 text-emerald-200 group-hover:text-emerald-100
                       transition-colors drop-shadow-lg">
                            Otherworld Apotheosis
                        </h3>
                        <p class="text-emerald-100/80 group-hover:text-emerald-100 transition-colors">
                            Apotheosis extension for Otherworld
                        </p>
                    </div>
                </a>

                <a href="/mods/medieval-origins"
                   class="group relative overflow-hidden rounded-lg shadow-md hover:shadow-xl
              transition-all duration-300 hover:-translate-y-0.5
              bg-gradient-to-br from-amber-900/20 to-amber-900/10 border border-amber-500/10">
                    <div class="absolute inset-0 bg-gradient-to-br from-amber-900/0 to-amber-900/30
                    group-hover:from-amber-900/10 group-hover:to-amber-900/40
                    transition-all duration-300"></div>
                    <div class="relative p-6 z-10">
                        <h3 class="text-xl font-bold mb-2 text-amber-200 group-hover:text-amber-100
                       transition-colors drop-shadow-lg">
                            Medieval Origins Revival
                        </h3>
                        <p class="text-amber-100/80 group-hover:text-amber-100 transition-colors">
                            Origins inspired by Mythology, Fantasy, and the Medieval Era
                        </p>
                    </div>
                </a>
            </div>
        </div>
    </main>
</Layout>